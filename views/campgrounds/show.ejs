<% layout('layouts/boilerplate')%>

<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= campground.image%>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= campground.title%></h5>
        <p class="card-text"><%= campground.description%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campground.location%></li>
        <li class="list-group-item">Submitted by <%= campground.author.username%></li>
        <li class="list-group-item">Rs. <%= campground.price%>/night</li>
      </ul>
      <% if( currentUser && campground.author.equals(currentUser._id)){%>
      <div class="card-body">
        <a
          class="card-link btn btn-info"
          href="/campgrounds/<%=campground._id%>/edit"
          >Edit</a
        >
        <form
          class="d-inline"
          action="/campgrounds/<%=campground._id%>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
      <%}%>
      <div class="card-footer text-muted">2 days ago</div>
    </div>
    </div>
    <div class="col-6">
      <div class="mb-3">
        <%if(currentUser){%>
        <h4>Leave a review:</h4>
        <form
          action="/campgrounds/<%=campground._id%>/reviews/new"
          method="POST"
          novalidate
          class="validated-form"
        >
          <div class="mb-3">
            <label for="rating" class="form-label"
              >Rating: <span id="ratingInput">3/5</span></label
            >
            <input
              type="range"
              name="review[rating]"
              class="form-range"
              min="0"
              max="5"
              value="3"
              id="rating"
            />
          </div>
          <div class="mb-3">
            <label class="form-label" for="reviewBody">Review</label>
            <textarea
              id="reviewBody"
              class="form-control"
              name="review[body]"
              rows="3"
              required
            ></textarea>
            <div class="valid-feedback">Looks good!</div>
          </div>
          <button class="btn btn-success">Submit</button>
        </form>
        <%}%>
        <div class="mb-3 mt-3 d-flex flex-column" style="max-height: 625px;overflow-y: auto">
          <%for(const review of reviews){%>
          <div class="card mb-3">
            <div class="card-body">
              <h6 class="card-title">Rating: <%=review.rating%>/5</h6>
              <p class="card-text text-muted">Review by: <%=review.author.username%></p>
              <p class="card-text">Review: <%=review.body%></p>
              <%if ( currentUser && review.author.equals(currentUser._id)){%>
              <form action="/campgrounds/<%=campground._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-danger">Delete</button>
              </form>
              <%}%>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
